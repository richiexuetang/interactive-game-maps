{
  "name": "server",
  "version": "0.0.1",
  "scripts": {
    "build": "nest build",
    "copy-package": "cp package.json dist/package.json",
    "copy-prisma-schema": " mkdir -p /dist/prisma/schema && cp -r prisma/schema.prisma /dist/prisma/schema.prisma",
    "copy-env": "cp .env dist/.env",
    "build-with-package": "pnpm run build && pnpm run copy-package && pnpm run copy-env",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "migrate:dev": "prisma migrate dev --preview-feature",
    "migrate:dev:create": "prisma migrate dev --create-only --preview-feature",
    "migrate:reset": "prisma migrate reset --preview-feature",
    "migrate:deploy": "pnpx prisma migrate deploy --preview-feature",
    "migrate:status": "pnpx prisma migrate status --preview-feature",
    "migrate:resolve": "pnpx prisma migrate resolve --preview-feature",
    "prisma:studio": "pnpx prisma studio",
    "prisma:generate": "pnpx prisma generate",
    "prisma:generate:watch": "pnpx prisma generate --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "start:db": "pnpm run migrate:deploy && pnpm run prisma:generate && pnpm run seed",
    "seed": "pnpx prisma db seed",
    "postinstall": "pnpm run prisma:generate",
    "db:seed": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' prisma/seed.ts",
    "docker:migrate": "docker-compose -f docker-compose.migrate.yml up -d",
    "docker:db": "docker-compose -f docker-compose.db.yml up -d",
    "docker:seed": "docker exec -it nest-api pnpm run seed",
    "docker": "docker-compose up -d",
    "docker:build": "docker-compose build"
  },
  "dependencies": {
    "@apollo/server": "^4.7.5",
    "@nestjs/apollo": "12.0.7",
    "@nestjs/common": "10.1.0",
    "@nestjs/config": "3.0.0",
    "@nestjs/core": "10.1.0",
    "@nestjs/graphql": "12.0.8",
    "@nestjs/swagger": "7.1.2",
    "@prisma/client": "^5.20.0",
    "class-transformer": "^0.5.1",
    "class-validator": "0.13.2",
    "graphql": "16.7.1",
    "nestjs-prisma": "0.22.0-dev.0",
    "reflect-metadata": "0.1.13",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "10.1.10",
    "@nestjs/platform-express": "^10.4.4",
    "@nestjs/schematics": "10.0.1",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.70",
    "@types/chance": "1.1.3",
    "@types/express": "4.17.17",
    "@types/node": "^20.3.1",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "chance": "1.1.11",
    "prisma": "5.0.0",
    "prisma-dbml-generator": "0.11.0-dev.0",
    "ts-jest": "29.1.1",
    "ts-loader": "9.4.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}